                    android:layout_marginTop="304dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/editar" />

                <TextView
                    android:id="@+id/textNopUblish2"
