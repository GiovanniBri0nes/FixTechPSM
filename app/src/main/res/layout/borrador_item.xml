<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="borradorItem"
            type="com.sisMoviles.fixtech.viewHolders.BorradorViewHolder" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="346dp"
        android:layout_height="136dp"
        android:maxWidth="340dp"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/borritem_txt_descripcion"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="9dp"
                android:breakStrategy="simple"
                android:fontFamily="@font/nunito_semibold"
                android:maxLines="3"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/grisclaro"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/borritem_txt_titulo" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginBottom="95dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/borritem_txt_titulo"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/borrar" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="44dp"
                android:layout_height="46dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="39dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/borritem_txt_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/editar" />

            <TextView
                android:id="@+id/borritem_txt_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="93dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="7dp"
                android:breakStrategy="simple"
                android:fontFamily="@font/outfit_semibold"
                android:maxLines="1"
                android:text="Titulo Publicacion"
                android:textColor="@color/grisclaro"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/borritem_txt_descripcion"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
