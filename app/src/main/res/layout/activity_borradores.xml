<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="borradoresActivity"
            type="com.sisMoviles.fixtech.BorradoresActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#455156">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#F8F4F9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/logo_fixtech"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:src="@drawable/tech"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/user" />
        </LinearLayout>


        <!-- Card para borradores -->

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBorradores"
            android:layout_width="366dp"
            android:layout_height="601dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="@color/grisclaro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="23dp">

                <ImageView
                    android:id="@+id/logosmall"
                    android:layout_width="69dp"
                    android:layout_height="49dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo_small" />

                <TextView
                    android:id="@+id/textDrafts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:fontFamily="@font/outfit_medium"
                    android:text="Drafts"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <View
                    android:id="@+id/viewDraft"
                    android:layout_width="340dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="108dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/textNopUblish"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="108dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Not publish"
                    android:textColor="#606665"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="156dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/editar" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="209dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="156dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Arreglo PC a domicilio"
                    android:textColor="#606665"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="312dp"
                    android:layout_marginTop="108dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/borrar" />

                <View
