<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="publicacionItem"
            type="com.sisMoviles.fixtech.viewHolders.PublicacionViewHolder" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grisclaro">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logosmall3"
                android:layout_width="69dp"
                android:layout_height="49dp"
                android:layout_marginEnd="268dp"
                app:layout_constraintEnd_toStartOf="@+id/pi_txt_fecha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_small" />

            <TextView
                android:id="@+id/pi_txt_fecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="12-11-2003"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toTopOf="@+id/pi_txt_descripcion"
                app:layout_constraintEnd_toStartOf="@+id/imageView9"
                app:layout_constraintStart_toEndOf="@+id/logosmall3"
                app:layout_constraintTop_toBottomOf="@+id/pi_txt_fecha"
                app:srcCompat="@drawable/borrar" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toTopOf="@+id/pi_txt_descripcion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/pi_txt_fecha"
                app:srcCompat="@drawable/borrar" />

            <ImageView
                android:id="@+id/pi_img_usuario"
                android:layout_width="69dp"
                android:layout_height="72dp"
                android:layout_marginBottom="19dp"
                app:layout_constraintBottom_toTopOf="@+id/pi_img_imagen"
                app:layout_constraintEnd_toStartOf="@+id/pi_txt_titulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logosmall3"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/pi_txt_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="141dp"
                android:fontFamily="@font/outfit_semibold"
                android:text="Titulo Publicacion"
                android:textColor="@color/azul"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/pi_txt_descripcion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_img_usuario"
                app:layout_constraintTop_toBottomOf="@+id/pi_txt_usuario" />

            <TextView
                android:id="@+id/pi_txt_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="242dp"
                android:fontFamily="@font/outfit_semibold"
                android:text="VocalEm"
                android:textColor="@color/naranja"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/pi_txt_titulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pi_img_usuario"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pi_txt_descripcion"
                android:layout_width="333dp"
                android:layout_height="19dp"
                android:layout_marginStart="69dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/pi_img_imagen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pi_txt_titulo" />

            <ImageView
                android:id="@+id/pi_img_imagen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pi_txt_descripcion"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>